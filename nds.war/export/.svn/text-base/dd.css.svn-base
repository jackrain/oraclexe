body{
 margin:0px auto;
 padding:0px;
 height:100%;
 text-align:left;
 border:0;
 font-family:Arial, Helvetica, sans-serif;
 font-size:12px;
 color:#000;
}
a{
    color:#fff;
    text-decoration:none;
}
#dd-main{
width:600px;
margin:0 auto;
color:000;
text-align:center;}

#dd-title{
background:#FFFFFF url(images/dd-title.gif) no-repeat scroll;
width:600px;
height:40px;}

#dd-content{
width:564px;
text-align:left;
margin-left:8px;
display:block;
margin:0 auto;}

.dd-bg{
width:563px;
background:url(images/dd-bg.gif) no-repeat scroll;
height:108px;}

.dd-title{
color:#000;
font-size:12px;
font-weight:bold;
text-align:center;
margin-left:9px;
padding-top:5px;
+padding-top:8px;/*IE8��ִ��*/
width:100px;}

.dd-txt{
width:500px;
margin:0;
padding-top:20px;
text-align:center;}

.dd-left-txt {
margin:3px 0 4px 2px;
text-align:right;
}

.dd-right-txt {
margin:1px 0 4px 2px;
text-align:left;
}

.ipt-110 {
border:1px #a7c0d6 solid;
color:#000;
font-size:12px;
text-align:left;
width:110px;
}

.ipt-60 {
border:1px #a7c0d6 solid;
color:#000;
font-size:12px;
text-align:left;
width:60px;
font-weight:bold;
}

#dd-height{
margin:0 auto;
height:10px;}

.dd-border{
border:1px #678fc2 solid;
width:543px;
padding:10px;}

.dd-tab{
font-weight:bold;
height:20px;
line-height:normal;
list-style-type:none;
padding-top:3px;
text-align:left;}

.dd-tab span{
background:transparent url(images/dd-bullet_orange.gif) no-repeat scroll 0 0;
color:#11449E;
display:inline;
padding:0 0 0 12px;
position:relative;
text-decoration:none;}