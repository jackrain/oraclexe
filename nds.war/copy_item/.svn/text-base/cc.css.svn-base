body{
 margin:0px auto;
 padding:0px;
 height:100%;
 text-align:left;
 border:0;
 font-family:Arial, Helvetica, sans-serif;
 font-size:12px;
 color:#000;
}

#cc-main{
width:600px;
margin:0 auto;
color:000;
text-align:center;}

#cc-title{
background:#FFFFFF url(images/cc-title.gif) no-repeat scroll;
width:600px;
height:34px;}

#cc-content{
width:564px;
height:570px;
text-align:left;
margin-left:8px;
display:block;
margin:0 auto;}

.cc-bg{
width:563px;
background:url(images/cc-bg.gif) no-repeat scroll;
height:75px;
}

.cc-title{
color:#000;
font-size:12px;
font-weight:bold;
text-align:center;
margin-left:9px;
padding-top:5px;
+padding-top:8px;/*IE8��ִ��*/
width:100px;}

.cc-txt{
width:500px;
margin:0;
padding-top:20px;
text-align:center;
display:inline-block;}

.cc-left-txt {
margin:3px 0 4px 2px;
text-align:right;
}

.cc-right-txt{
margin:1px 0 4px 2px;
text-align:left;
}

.ipt-110{
border:1px #a7c0d6 solid;
color:#000;
font-size:12px;
text-align:left;
width:110px;
}

.ipt-60 {
border:1px #a7c0d6 solid;
color:#000;
font-size:12px;
text-align:left;
width:60px;
font-weight:bold;
}

.cc-height{
margin:0 auto;
height:10px;}

.cc-bg01{
width:563px;
background:url(images/cc-bg01.gif) no-repeat scroll;
height:113px;}

#cc-btn{
margin:0 auto;
text-align:right;
padding-right:20px;}